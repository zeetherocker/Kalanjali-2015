<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_main_event"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    card_view:cardElevation="4dp"
    android:clickable="true"
    android:focusable="false"
    android:foreground="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/main_event_image"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_main_event"
        android:foregroundGravity="top"
        android:layout_gravity="top"
        android:paddingTop="0dp"
        android:focusable="true"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/main_event_text"
        android:layout_width="171dp"
        android:layout_height="66dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Event"
        android:layout_marginStart="325dp"
        android:layout_toRightOf="@+id/main_event_image"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:focusable="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/main_event_text2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="16th - 17th Oct "
        android:layout_alignBottom="@+id/main_event_text"
        android:layout_gravity="top"
        android:layout_marginStart="327dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="14dp"
        android:focusable="true"
        android:layout_below="@+id/main_event_text"
        android:layout_marginTop="55dp"/>


</android.support.v7.widget.CardView>